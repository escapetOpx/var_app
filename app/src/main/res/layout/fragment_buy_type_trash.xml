<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout style="@style/block_text_buy_type_trash_design">

                        <ImageView
                            android:id="@+id/imageView3"
                            style="@style/ic_type_trash_desing"
                            app:srcCompat="@drawable/ic_type_all" />
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView5000"
                            style="@style/black_type_trash_text"
                            android:text="ทุกประเภท" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/line_buy_type_trash_design"></LinearLayout>

                    <LinearLayout style="@style/block_text_buy_type_trash_design">


                        <ImageView
                            android:id="@+id/imageView53"
                            style="@style/ic_type_trash_desing"
                            app:srcCompat="@drawable/ic_type_paper" />
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView50500"
                                    style="@style/black_type_trash_text"
                                    android:text="กระดาษ" />
                            </LinearLayout>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

                    </LinearLayout>

                    <LinearLayout style="@style/line_buy_type_trash_design"></LinearLayout>

                    <LinearLayout style="@style/block_text_buy_type_trash_design">


                        <ImageView
                            android:id="@+id/imageView73"
                            style="@style/ic_type_trash_desing"
                            app:srcCompat="@drawable/ic_type_pastic" />
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView500850"
                                    style="@style/black_type_trash_text"
                                    android:text="พลาสติก" />
                            </LinearLayout>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

                    </LinearLayout>

                    <LinearLayout style="@style/line_buy_type_trash_design"></LinearLayout>


                    <LinearLayout style="@style/block_text_buy_type_trash_design">


                        <ImageView
                            android:id="@+id/imageView783"
                            style="@style/ic_type_trash_desing"
                            app:srcCompat="@drawable/ic_type_metal" />
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView500870"
                                    style="@style/black_type_trash_text"
                                    android:text="โลหะ" />
                            </LinearLayout>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

                    </LinearLayout>

                    <LinearLayout style="@style/line_buy_type_trash_design"></LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>